@model Pizza
@{
    List<Category> categories = ViewData["categories"] as List<Category>;
    List<Ingredient> ingredients = ViewData["ingredients"] as List<Ingredient>;
}

<div class="container">
    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">  
            <strong>Name:</strong>
            <input asp-for="Name" class="d-block w-100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Description:</strong>
            <textarea asp-for="Description" class="d-block w-100"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Image:</strong>
            <input asp-for="Image" class="d-block w-100"/>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Price:</strong>
            <input asp-for="Price" class="d-block w-100"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="CategoryID" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach(Category category in categories)
                {
                    if(Model != null && Model.CategoryID == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Ingredienti:</strong>
            @foreach  (Ingredient ingredient in ingredients)
            {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@ingredient.Id" id="flexCheck-@(ingredient.Name)">
                <label class="form-check-label" for="flexCheckDefault">@ingredient.Name</label>
            </div>
            }
        </div>
                    
                
            
                        
        
        <div class="text-end">
        <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>